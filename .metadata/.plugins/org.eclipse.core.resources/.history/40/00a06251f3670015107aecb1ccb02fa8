package com.barghest.games.chooserpg;

import java.awt.Font;
import java.awt.GridBagConstraints;
import java.awt.GridBagLayout;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

import javax.swing.JButton;
import javax.swing.JLabel;
import javax.swing.JPanel;
import javax.swing.JRadioButton;
import javax.swing.JTextArea;
import javax.swing.JTextField;

public class Intro extends JPanel implements ActionListener {
	private JTextArea introText;
	private JTextField namefield;
	private JTextField nameconfirmation;
	private JLabel namelabel;
	private JButton namebutton;
	private JLabel newlines;
	private JLabel genderlabel;
	private JRadioButton femalebutton;
	private JRadioButton malebutton;
	
	public int row;
	public int column;
	
	public Intro(GridBagConstraints grid) {
		row = 0;
		column = 0;
		
		introText = new JTextArea();
		introText.setText("\nYou will begin as a young adolescent.\n" +
				"A sparkling new life that has yet to step out into the world. " +
				"You are but a simple being that walks among the land like any other. " +
				"You will make some choices in life that may shape who you become in the future and may open or close opportunities. " +
				"Like any other being, sometimes, the path you take might make you notorious; whether good or bad is really for you to decide. " +
				"\n\nBut, before we can even begin your story please tell me about yourself: ");
		introText.setLineWrap(true);
		introText.setWrapStyleWord(true);
		introText.setEditable(false);
		introText.setOpaque(false);
		introText.setFont(new Font("Serif", Font.PLAIN, 12));
		grid.weightx = 0.5;
		grid.fill = GridBagConstraints.HORIZONTAL;
		grid.gridwidth = 4;
		grid.gridx=column;
		grid.gridy=row;
        add(introText, grid);
		nextRow();
		namelabel = addLabel("What is your name?", grid);
		nextCol();
		namefield = addText(true, "name", grid);
		grid.gridwidth = 1;
		add(namefield, grid); column++;
		namebutton = addButton("Enter", GridBagConstraints.CENTER, 1, 2, grid);
		resetCol();
		nextRow();
		nameconfirmation = addText(false, "nothing", grid);
		grid.gridwidth = 3;
		add(nameconfirmation, grid);
		grid.gridwidth = 1;
		resetCol();
		nextRow();
		newlines = addLabel("\n", grid);
		add(newlines, grid);
		nextRow();
		genderlabel = addLabel("\nWhat is your gender?", grid); 
		add(genderlabel, grid);
		nextRow();
		femalebutton = addRadioButton("Female", grid);
		add(femalebutton, grid);
		nextCol();
		malebutton = addRadioButton("Male", grid);
		add(malebutton, grid);
		resetCol();
		nextRow();
		newlines = addLabel("\n", grid);
		add(newlines, grid);
		nextRow();
		addLabel("\nWhat is your race?", x, y); y++;
		nextRow();
		addRadioButton("Human", x, y); x++;
		nextCol();
		addRadioButton("Demon", grid);
		nextCol();
		addRadioButton("Saint", grid);
		resetCol();
		nextRow();
		addRadioButton("Half Demon", grid);
		nextCol();
		addRadioButton("Half Saint", grid);
		resetCol();
		nextRow();
		
		x=0; y++; addLabel("\n", x, y);
		x=0; y++; addLabel("\n", x, y);
		y++;
		addButton("Start your story", 0, y, GridBagConstraints.PAGE_END, 3, 1);
		//addButton("Next", 3, y, GridBagConstraints.PAGE_END, 1, 1);
		removeAll();
	}

	public void actionPerformed(ActionEvent event) {
		if ("name".equals(event.getActionCommand())) {
			String text = namefield.getText();
			nameconfirmation.setText("You have named yourself " + text + ".");
		}
	}
	
	public void addButton(String text, int anchor, int width, int weight, GridBagConstraints grid) {
		JButton button = new JButton(text);
		grid.fill = GridBagConstraints.HORIZONTAL;
		grid.anchor = anchor;
		grid.weighty = weight;
		grid.gridwidth = width;
		grid.gridx = column;
		grid.gridy = row;
		add(button, grid);
	}
	
	public void addRadioButton(String name, GridBagConstraints grid) {
		JRadioButton button = new JRadioButton(name);
		grid.fill = GridBagConstraints.HORIZONTAL;
		grid.weightx = 0.5;
		grid.gridx = column;
		grid.gridy = row;
		add(button, grid);
	}
	
	public JLabel addLabel(String text, GridBagConstraints grid) {
		JLabel label = new JLabel(text);
		label.setFont(new Font("Serif", Font.PLAIN, 12));
		grid.weightx = 0.5;
		grid.fill = GridBagConstraints.HORIZONTAL;
		grid.gridx=column;
		grid.gridy=row;
        return label;
	}
	
	public JTextField addText(boolean edit, String event, GridBagConstraints grid) {
		JTextField textField = new JTextField(12);
		textField.setEditable(edit);
        textField.setActionCommand(event);
		textField.addActionListener(this);
        grid.fill = GridBagConstraints.HORIZONTAL;
        grid.weightx = 0.5;
        grid.gridx = column;
        grid.gridy = row;
        return textField;
	}
	
	public void nextCol() {
		column++;
	}
	
	public void nextRow() {
		row++;
	}
	
	public void resetCol() {
		column = 0;
	}
	
	public void resetRow() {
		row = 0;
	}
}
